 <div class="login-form">
  <form>
    <h2>Log in with Social Media</h2>
    <div class="form-group">
      <button class="btn facebook-btn">Log in with Facebook</button>
    </div>
    <div class="form-group">
      <button class="btn twitter-btn">Log in with Twitter</button>
    </div>
    <div class="form-group">
      <button class="btn google-btn">Log in with Google+</button>
    </div>
  </form>
</div>

.login-form {
  max-width: 500px;
  margin: auto;
  padding: 20px;
  background-color: #f2f2f2;
  border-radius: 10px;
}

.login-form h2 {
  text-align: center;
}

.form-group {
  margin: 10px 0;
}

.btn {
  display: block;
  width: 100%;
  padding: 10px;
  font-size: 16px;
  font-weight: bold;
  color: #fff;
  text-align: center;
  text-transform: uppercase;
  border-radius: 5px;
  cursor: pointer;
}

.facebook-btn {
  background-color: #3b5998;
}

.twitter-btn {
  background-color: #1da1f2;
}

.google-btn {
  background-color: #db4a39;
}

